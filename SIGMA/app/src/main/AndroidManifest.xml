<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yarince.sigma">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AbastecimientoOtrosActivity"
            android:label="@string/title_activity_abastecimiento_otros"
            android:theme="@style/AppTheme.NoActionBar"
            android:icon="@drawable/ic_local_gas_station_black_24dp"></activity>
        <activity
            android:name=".MenuDesplegable2"
            android:label="@string/title_activity_menu_desplegable2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MenuDesplegableActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".Task" />
        <activity
            android:name=".Catering"
            android:label="Nuevo Abastecimiento" />
        <activity android:name=".Attendance" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>